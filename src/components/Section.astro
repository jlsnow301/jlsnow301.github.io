---
type Props = Partial<{
  title: string;
}>;

const { title }: Props = Astro.props;
---

<div class="flex flex-col gap-4">
  {
    title && (
      <h1 class="text-2xl  dark:text-zinc-200 text-zinc-800 text-center">
        {title}
      </h1>
    )
  }
  <div class="flex flex-col gap-2 flex-1">
    <slot />
  </div>
</div>
