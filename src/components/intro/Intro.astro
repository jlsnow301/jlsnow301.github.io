---
import { ThemeToggle } from "@/components/theme-toggle";
import { MyAvatar } from "@/components/my-avatar";
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import ContactButtons from "./ContactButtons.astro";
import SkillList from "./SkillList.astro";
---

<div
  class="min-h-screen dark:bg-gradient-to-tr dark:from-neutral-950 dark:to-rose-800/20"
  id="intro"
>
  <!-- Main Content -->
  <div class="container mx-auto px-4 py-16 flex flex-col gap-8">
    <!-- Theme Toggle -->
    <div class="flex lg:justify-end">
      <ThemeToggle rectangle client:only="react" />
    </div>

    <!-- About Me Section -->
    <div class="flex flex-col md:flex-row gap-8 items-center justify-center">
      <div class="flex gap-8 items-center h-full md:h-[280px]">
        <Card
          className="w-full h-full lg:w-1/2 shadow-lg hover:shadow-xl transition-shadow duration-300 dark:shadow-xl dark:shadow-rose-950"
        >
          <CardHeader>
            <CardTitle className="flex gap-4">
              <MyAvatar pixels client:load />
              <div
                class="text-3xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 dark:from-rose-400 dark:to-rose-500 text-transparent bg-clip-text"
              >
                About Me
              </div>
            </CardTitle></CardHeader
          >
          <CardContent>
            <CardDescription className="text-lg leading-relaxed">
              I'm a US based software developer with over 5 years of experience.
              Coding is a hobby of mine and I enjoy learning new tools to keep
              sharp. I'm currently working on a few projects and am always
              looking for new opportunities.
            </CardDescription>
          </CardContent>
          <CardFooter className="flex justify-end items-center">
            <div class="flex flex-col gap-8">
              <ContactButtons />
            </div>
          </CardFooter>
        </Card>
        <Card
          className="hidden h-full lg:block lg:w-1/2 shadow-lg hover:shadow-xl transition-shadow duration-300  dark:shadow-xl dark:shadow-rose-950"
        >
          <CardHeader
            ><CardDescription
              >Interests & Skills. Hover for description.</CardDescription
            ></CardHeader
          >
          <CardContent>
            <SkillList />
          </CardContent>
        </Card>
      </div>
    </div>

    <!-- Project Buttons -->
    <div class="hidden md:flex flex-col mt-16">
      <h2
        class="text-3xl font-bold text-center mb-8 bg-gradient-to-r from-purple-400 to-pink-500 text-transparent bg-clip-text dark:from-gray-100 dark:to-white"
      >
        Demo Projects
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <a href="#dashboard" class="group">
          <Card
            className="h-64 flex flex-col items-center justify-center text-center p-6 transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-2"
          >
            <CardHeader>
              <CardTitle className="text-2xl font-bold">Dashboard</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-600 dark:text-gray-300">
                An interactive analytics dashboard showcasing data visualization
                skills.
              </p>
            </CardContent>
          </Card>
        </a>
        <a href="#ecommerce" class="group">
          <Card
            className="h-64 flex flex-col items-center justify-center text-center p-6 transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-2"
          >
            <CardHeader>
              <CardTitle className="text-2xl font-bold">E-Commerce</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-600 dark:text-gray-300">
                A sleek and responsive e-commerce platform with modern features.
              </p>
            </CardContent>
          </Card>
        </a>
        <a href="#blog" class="group">
          <Card
            className="h-64 flex flex-col items-center justify-center text-center p-6 transition-all duration-300 group-hover:shadow-xl group-hover:-translate-y-2"
          >
            <CardHeader>
              <CardTitle className="text-2xl font-bold">Blog</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-600 dark:text-gray-300">
                A content-rich blog showcasing writing and content management
                abilities.
              </p>
            </CardContent>
          </Card>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
