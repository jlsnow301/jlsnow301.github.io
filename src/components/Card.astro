---
type Props = {
  title?: string;
};

const { title }: Props = Astro.props;
---

<div
  class="overflow-hidden flex flex-col flex-1 rounded-lg p-4 gap-4 shadow-md
   dark:bg-zinc-900 dark:border-transparent dark:shadow-xl dark:shadow-rose-950"
>
  {
    title && (
      <div>
        <h2 class="dark:text-zinc-200 text-2xl font-bold mb-4 ml-2">{title}</h2>
        <div class="border-b-2 border-zinc-100 dark:border-zinc-300" />
      </div>
    )
  }
  <div class="p-1 flex flex-1">
    <slot />
  </div>
</div>
