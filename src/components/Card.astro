---
export interface Props {
  name: string;
  title: string;
}

const { name, title } = Astro.props;
---

<div
  class="space-y-0 rounded-sm border-b-2 bg-closeup-card bg-contain bg-center px-24 py-8 md:mt-32 md:mr-24 md:w-auto md:-skew-x-9.1 md:skew-y-9.1 md:border-0 md:bg-none"
>
  <div class="mb-2 mt-8">
    <h1
      class="text-center font-copperplate text-xl font-semibold text-gray-900 md:text-4xl"
    >
      {name}
    </h1>
    <h2
      class="hidden md:block md:text-center md:font-copperplate md:text-2xl md:font-bold md:text-gray-900"
    >
      {title}
    </h2>

    <hr class="hidden md:flex md:border-gray-800" />
  </div>

  <div class="space-y-2">
    <slot />
  </div>
</div>
